{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2019"
  },
  "include": [
    "src/**/*.ts",
    "tests/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}